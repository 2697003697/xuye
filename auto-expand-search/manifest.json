{
  "manifest_version": 3,
  "name": "续页",
  "version": "1.0.1",
  "description": "自动加载搜索引擎后续页面，合并多页结果",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://www.google.com/*",
    "*://www.google.com.hk/*",
    "*://www.baidu.com/*",
    "*://www.bing.com/*",
    "*://cn.bing.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://www.google.com.hk/search*",
        "*://www.baidu.com/s*",
        "*://www.bing.com/search*",
        "*://cn.bing.com/search*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
